{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "indentation": 2,
    "number-leading-zero": null,
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "import",
        "media"
      ]
    }]
  }
}
